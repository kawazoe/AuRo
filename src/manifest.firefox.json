{
  "manifest_version": 2,
  "name": "AuRo - audio output device router",
  "short_name": "AuRo",
  "description": "pick audio output device for current tab",
  "author": "",
  "homepage_url": "https://github.com/ish-/AuRo",
  "version": "0.2",
  "version_name": "0.2",
  "browser_specific_settings": {
    "gecko": {
      "id": "auro@contact.etiennemaheu.com",
      "strict_min_version": "116.0"
    }
  },
  "browser_action": {
    "default_icon": {
      "128": "Icon128.png"
    },
    "default_title": "AuRo - choose your audio output device",
    "default_popup": "popup/popup.html"
  },
  "icons": {
    "128": "Icon128.png"
  },
  "background": {
    "scripts": ["serviceWorker.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "content/index.js"
      ],
      "all_frames": true
    }
  ],
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting",
    "http://*/*",
    "https://*/*"
  ]
}
